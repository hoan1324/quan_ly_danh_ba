
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Đăng ký</title>
    <link href="~/Conten/lib/fontAwesome/fontawesome.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/lib/fontAwesome/all.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/lib/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/sign-form.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class=" d-flex align-items-center body-content">
        <div class="container bg-white body-form shadow-lg rounded h-100 mh-100">
            <div class="logo text-center my-4">
                <a href="~/home/index">
                    <img src="~/Content/img/logo.png" />
                </a>
                <h1 class="mt-4">Đăng ký</h1>
            </div>
            <div class=" sign-up">
                <form id="sign-up-form" action="~/login/signup" method="post" class="needs-validation" novalidate>
                    <div class=" mb-3">
                        <label for="email" class="ms-1 mb-2">Email</label>
                        <input type="email" class="form-control" id="email" name="Email" placeholder="Vui lòng nhập Email">
                    </div>
                    <div class=" mb-3">
                        <label for="username" class="ms-1 mb-2">Username</label>
                        <input type="text" class="form-control" id="username" name="UserName" placeholder="Vui lòng nhập tên người dùng">
                    </div>
                    <div class=" mb-3">
                        <label for="password" class="ms-1 mb-2">Mật khẩu</label>
                        <div class="position-relative">
                            <input type="password" class="form-control password" id="password" name="Password" placeholder="Vui lòng nhập mật khẩu">
                            <i class="fa-solid fa-eye-slash position-absolute visible-pass"></i>
                        </div>
                    </div>
                    <div class=" mb-3">
                        <label for="password" class="ms-1 mb-2">Xác nhận mật khẩu</label>
                        <div class="position-relative">
                            <input type="password" class="form-control password" id="confirm-password" name="ConfirmPassword" placeholder="Vui lòng nhập lại mật khẩu">
                            <i class="fa-solid fa-eye-slash position-absolute visible-pass"></i>
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button class="btn btn-outline-success" type="submit">Đăng ký</button>
                    </div>
                    <div class="mt-4 d-flex justify-content-between align-items-center ">
                        <div class="different-solution">
                            <span>Bạn đã có tài khoản ?<a href="~/login/signin" class="link-success">Đăng nhập</a></span>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="~/Content/lib/Scripts/jquery-3.7.1.min.js"></script>
    <script src="~/Content/lib/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Content/lib/Scripts/jquery.validate.min.js"></script>
    <script src="~/Content/Scripts/sign-up.js"></script>
</body>
</html>
