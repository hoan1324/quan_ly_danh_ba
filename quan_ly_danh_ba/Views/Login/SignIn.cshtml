
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Đăng Nhập</title>
    <link href="~/Conten/lib/fontAwesome/fontawesome.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/lib/fontAwesome/all.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/lib/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/sign-form.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="bg-light bg-gradient d-flex align-items-center body-content"> 
        <div class="container bg-white body-form ">
            <div class="logo text-center my-4">
                <img src="~/Content/img/logo.png" />
                <h1 class="mt-4">Đăng nhập</h1>
            </div>
            <div class=" sign-in">
                <form id="form-create" action="~/user/contact/create" method="post" class="needs-validation" novalidate>
                    <div class=" mb-3">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" id="email" name="Email" placeholder="Vui lòng nhập Email">
                    </div>
                    <div class=" mb-3">
                        <label for="email">Mật khẩu</label>
                        <input type="password" class="form-control" id="email" name="Password" placeholder="Vui lòng nhập mật khẩu">
                    </div>

                    <div class="text-center">
                        <button class="btn btn-outline-success" type="submit">Đăng nhập</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
