@using PagedList;
@using PagedList.Mvc;
@model IPagedList<Data.Entity.Contact>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}
@if (TempData["Message"] != null)
{
    <div class="temp-alert">@TempData["Message"]</div>
    <script>
        $(function () {
            $(".temp-alert").fadeIn().delay(2000).fadeOut();
        });
    </script>
}
@section linkCss{
    <link href="~/Areas/User/Content/css/data-table.css" rel="stylesheet" type="text/css" />
}

<div class="danhsach mt-4">

    <h1>QUẢN LÝ LIÊN LẠC</h1>
    <div class="text-end create-data d-flex justify-content-end flex-wrap align-items-center">
        <div class="search ">
            <form class="d-flex">
                <input type="text" class="form-control me-2" id="fullname" placeholder="Tìm kiếm theo tên" name="FullName">
                <input type="text" class="form-control me-2" id="phonenumber" placeholder="Tìm kiếm theo số điện thoại" name="PhoneNumber">
                <input type="text" class="form-control me-2" id="groupcontact" placeholder="Tìm kiếm theo quan hệ" name="groupContact">
            </form>
        </div>
        <span class="btn btn-success me-3 my-3"><a class="text-light fs-5" href="~/User/Contact/Create">Thêm mới</a></span>

    </div>
    <table class="w-100 overflow-auto data-table">
        <tr class="title-table">
            <th class="text-center  fs-5 p-3" scope="col">STT</th>
            <th class="text-center  fs-5 p-3" scope="col">Họ và tên</th>
            <th class="text-center  fs-5 p-3" scope="col">Số điện thoại</th>
            <th class="text-center  fs-5 p-3" scope="col">Email</th>
            <th class="text-center  fs-5 p-3" scope="col">Địa chỉ</th>
            <th class="text-center  fs-5 p-3" scope="col">Quan hệ</th>
            <th class="text-center  fs-5 p-3" scope="col">Chức năng </th>
        </tr>
        @if (@Model != null)
        { 
            int j=0;
            foreach (var item in Model)
            {
                int maxGroupsToShow = 3; // Giới hạn số nhóm liên lạc hiển thị
                int i = 0;
                var groupsToShow = item.GroupContacts.Take(maxGroupsToShow).ToList();
                <tr>
                    <td class="text-start fs-6 p-2 border text-center">@(++j)</td>
                    <td class="text-start fs-6 p-2 border">@item.FullName</td>
                    <td class="text-start fs-6 p-2 border">@item.PhoneNumber</td>
                    <td class="text-start fs-6 p-2 border">@((string.IsNullOrEmpty(item.Address)?"Không có dữ liệu":item.Address))</td>
                    <td class="text-start fs-6 p-2 border">@((string.IsNullOrEmpty(item.Email)?"Không có dữ liệu":item.Email))</td>
                    <td class="text-start fs-6 p-2 border">

                        @foreach (var group in item.GroupContacts)
                        {
                            if (i >= maxGroupsToShow)
                            {
                                <span>...</span>
                                break;
                            }
                            if (i > 0)
                            {
                                <span>, </span>
                            }
                            @group.GroupName
                            i++;

                        }
                    </td>
                    <td class=" border function-data">
                        <div class="d-flex justify-content-center align-items-center flex-wrap">
                            <span class=" mx-1 rounded-circle" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Chi tiết"><a class="link-info" href="~/User/Contact/Detail?id=@item.ContactID"><i class="fa-solid fa-circle-info"></i></a></span>
                            <span class=" mx-1 rounded-circle" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Sửa "><a class="link-warning" href="~/User/Contact/Edit?id=@item.ContactID"><i class="fa-solid fa-wrench"></i></a></span>
                            <span class=" mx-1 rounded-circle" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Xóa"><a data-bs-toggle="modal" data-bs-target="#exampleModal" class="link-danger delete-item" data-id="@item.ContactID"><i class="fa-solid fa-circle-xmark"></i></a></span>
                        </div>
                    </td>
                  </tr>
                
            }

        }
    </table>
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Xóa</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>bạn có chắc chắn muốn xóa dữ liệu này không</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <a class=" btn btn-primary link-light" id="confirmdeletebtn">Chắc chắn</a>
                </div>
            </div>
        </div>
    </div>
    @if (Model != null && Model.PageCount>1)
    {
        <div>
            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

            @Html.PagedListPager(Model, page => Url.Action("Index",
                 new { page }))
            
        </div>
    }
    </div>

@section Scripts{
    <script src="~/Areas/User/Content/script/data-table.js"></script>
}